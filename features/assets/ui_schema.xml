<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Tab Group Example</h:title>

    <model>
      <instance>
        <faims id="tabgroup_example">
          <!-- Empty Arch Entity -->
          <tabgroup1>
            <tab>
              <save></save>
              <next></next>
            </tab>
          </tabgroup1>
          <!-- Simple Arch Entity with free text only -->
          <tabgroup2>
            <tab>
              <name></name>
              <count></count>
              <date></date>
              <time></time>
              <location></location>
              <type></type>
              <save></save>
              <next></next>
            </tab>
          </tabgroup2>
          <!-- Simple Arch Entity with vocabs, measures and certainties-->
          <tabgroup3>
            <tab>
              <name></name>
              <count></count>
              <count-description></count-description>
              <count-certainty></count-certainty>
              <date></date>
              <time></time>
              <location></location>
              <location-certainty></location-certainty>
              <type></type>
              <save></save>
              <next></next>
            </tab>
          </tabgroup3>
          <!-- Complex Arch Entity with vocabs, measures and certainties-->
          <tabgroup4>
            <tab1>
              <name></name>
              <count></count>
              <count-description></count-description>
              <count-certainty></count-certainty>
              <save></save>
            </tab1>
            <tab2>
              <date></date>
              <time></time>
            </tab2>
            <tab3>
              <location></location>
              <location-certainty></location-certainty>
              <type></type>
            </tab3>
          </tabgroup4>
        </faims>
      </instance>

      <bind nodeset="/faims/tabgroup2/tab/name" type="string"/>
      <bind nodeset="/faims/tabgroup2/tab/count" type="integer"/>
      <bind nodeset="/faims/tabgroup2/tab/date" type="date"/>
      <bind nodeset="/faims/tabgroup2/tab/time" type="time"/>

      <bind nodeset="/faims/tabgroup3/tab/name" type="string"/>
      <bind nodeset="/faims/tabgroup3/tab/count" type="integer"/>
      <bind nodeset="/faims/tabgroup3/tab/count-description" type="string"/>
      <bind nodeset="/faims/tabgroup3/tab/count-certainty" type="integer"/>
      <bind nodeset="/faims/tabgroup3/tab/date" type="date"/>
      <bind nodeset="/faims/tabgroup3/tab/time" type="time"/>
      <bind nodeset="/faims/tabgroup3/tab/location-certainty" type="integer"/>

      <bind nodeset="/faims/tabgroup4/tab1/name" type="string"/>
      <bind nodeset="/faims/tabgroup4/tab1/count" type="integer"/>
      <bind nodeset="/faims/tabgroup4/tab1/count-description" type="string"/>
      <bind nodeset="/faims/tabgroup4/tab1/count-certainty" type="integer"/>
      <bind nodeset="/faims/tabgroup4/tab2/date" type="date"/>
      <bind nodeset="/faims/tabgroup4/tab2/time" type="time"/>
      <bind nodeset="/faims/tabgroup4/tab3/location-certainty" type="integer"/>

    </model>
  </h:head>

  <h:body>
    <group ref="tabgroup1" faims_archent_id="empty_entity">
      <label>empty_entity</label>
      <group ref="tab">
        <label>Empty Entity</label>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
        <trigger ref="next">
          <label>Next</label>
        </trigger>
      </group>
    </group>
    <group ref="tabgroup2" faims_archent_id="simple_entity">
      <label>simple_entity_1</label>
      <group ref="tab">
        <label>Simple Entity 1</label>
        <input ref="name" faims_attribute_name="name">
          <label>Name:</label>
        </input>
        <input ref="count" faims_attribute_name="count">
          <label>Count:</label>
        </input>
        <input ref="date" faims_attribute_name="date">
          <label>Date:</label>
        </input>
        <input ref="time" faims_attribute_name="time">
          <label>Time:</label>
        </input>
        <select1 ref="location" faims_attribute_name="location">
          <label>Location:</label>
          <item>
            <label>Loc A</label>
            <value>loca</value>
          </item>
          <item>
            <label>Loc B</label>
            <value>locb</value>
          </item>
          <item>
            <label>Loc C</label>
            <value>locc</value>
          </item>
          <item>
            <label>Loc D</label>
            <value>locd</value>
          </item>
        </select1>
        <select ref="type" faims_attribute_name="type">
          <label>Type:</label>
          <item>
            <label>Type A</label>
            <value>typea</value>
          </item>
          <item>
            <label>Type B</label>
            <value>typeb</value>
          </item>
          <item>
            <label>Type C</label>
            <value>typec</value>
          </item>
          <item>
            <label>Type D</label>
            <value>typed</value>
          </item>
        </select>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
        <trigger ref="next">
          <label>Next</label>
        </trigger>
      </group>
    </group>
    <group ref="tabgroup3" faims_archent_id="simple_entity">
      <label>simple_entity_2</label>
      <group ref="tab">
        <label>Simple Entity 2</label>
        <input ref="name" faims_attribute_name="name">
          <label>Name:</label>
        </input>
        <input ref="count" faims_attribute_name="count">
          <label>Count:</label>
        </input>
        <input ref="count-description" faims_attribute_name="count_description">
          <label>Description:</label>
        </input>
        <input ref="count-certainty" faims_attribute_name="count_certainty">
          <label>Certainty:</label>
        </input>
        <input ref="date" faims_attribute_name="date">
          <label>Date:</label>
        </input>
        <input ref="time" faims_attribute_name="time">
          <label>Time:</label>
        </input>
        <select1 ref="location" faims_attribute_name="location">
          <label>Location:</label>
          <item>
            <label>Loc A</label>
            <value>loca</value>
          </item>
          <item>
            <label>Loc B</label>
            <value>locb</value>
          </item>
          <item>
            <label>Loc C</label>
            <value>locc</value>
          </item>
          <item>
            <label>Loc D</label>
            <value>locd</value>
          </item>
        </select1>
        <input ref="location-certainty" faims_attribute_name="location_certainty">
          <label>Certainty:</label>
        </input>
        <select ref="type" faims_attribute_name="type">
          <label>Type:</label>
          <item>
            <label>Type A</label>
            <value>typea</value>
          </item>
          <item>
            <label>Type B</label>
            <value>typeb</value>
          </item>
          <item>
            <label>Type C</label>
            <value>typec</value>
          </item>
          <item>
            <label>Type D</label>
            <value>typed</value>
          </item>
        </select>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
        <trigger ref="next">
          <label>Next</label>
        </trigger>
      </group>
    </group>
    <group ref="tabgroup4" faims_archent_id="simple_entity">
      <label>simple_entity_3</label>
      <group ref="tab1">
        <label>Simple Entity 3 Tab 1</label>
        <input ref="name" faims_attribute_name="name">
          <label>Name:</label>
        </input>
        <input ref="count" faims_attribute_name="count">
          <label>Count:</label>
        </input>
        <input ref="count-description" faims_attribute_name="count_description">
          <label>Description:</label>
        </input>
        <input ref="count-certainty" faims_attribute_name="count_certainty">
          <label>Certainty:</label>
        </input>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
      </group>
      <group ref="tab2">
        <label>Simple Entity 3 Tab 2</label>
        <input ref="date" faims_attribute_name="date">
          <label>Date:</label>
        </input>
        <input ref="time" faims_attribute_name="time">
          <label>Time:</label>
        </input>
      </group>
      <group ref="tab3">
        <label>Simple Entity 3 Tab 3</label>
        <select1 ref="location" faims_attribute_name="location" appearance="full">
          <label>Location:</label>
          <item>
            <label>Loc A</label>
            <value>loca</value>
          </item>
          <item>
            <label>Loc B</label>
            <value>locb</value>
          </item>
          <item>
            <label>Loc C</label>
            <value>locc</value>
          </item>
          <item>
            <label>Loc D</label>
            <value>locd</value>
          </item>
        </select1>
        <input ref="location-certainty" faims_attribute_name="location_certainty">
          <label>Certainty:</label>
        </input>
        <select ref="type" faims_attribute_name="type">
          <label>Type:</label>
          <item>
            <label>Type A</label>
            <value>typea</value>
          </item>
          <item>
            <label>Type B</label>
            <value>typeb</value>
          </item>
          <item>
            <label>Type C</label>
            <value>typec</value>
          </item>
          <item>
            <label>Type D</label>
            <value>typed</value>
          </item>
        </select>
      </group>
    </group>
  </h:body>
</h:html>
