%h2 Edit Account Details
= simple_form_for(resource, :as => resource_name, :url => users_update_path, :html => { :method => :put }) do |f|
  = render "shared/error_messages", :target => @user
  = render :partial => 'personal_details', :locals => {:f => f}
  .form-actions
    = f.submit "Update", :class => "btn btn-primary"
    = link_to 'Cancel', user_path(current_user), :class => "btn"
