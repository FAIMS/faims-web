!!!
%html
  %head
    %title 
      FAIMS
      = " - #{yield :title}"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

    %link{:href => "http://use.typekit.net/c/d57ea3/source-sans-pro:i2:i3:i4:i6:i7:i9:n2:n3:n4:n6:n7:n9.Xw1:M:2,Xw4:M:2,Xw2:M:2,Xw7:M:2,Xvz:M:2,Xvx:M:2,Xw0:M:2,Xw3:M:2,Xw5:M:2,Xw6:M:2,Xvy:M:2,Xvw:M:2/d?", :rel => "stylesheet"}/

    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href => root_path } FAIMS
          %ul.nav
            %li= link_to "Users", users_path
            %li= link_to "Projects", projects_path
          = render 'layouts/user_menu'

    .container.main_content
      - flash.each do |name, msg|
        - next if name == :timedout
        - if name == :warning
          - alert = "alert"
        - elsif name == :notice
          - alert = "alert alert-success"
        - else
          - alert = "alert alert-error"
        %div{:class => "alert #{alert}"}
          %a.close{"data-dismiss" => "alert"} Ã—
          = msg
      .container
        %h1
          %span.page-title= yield :title
        = yield
