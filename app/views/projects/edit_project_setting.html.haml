- title @project_setting['name']
.container
  = simple_form_for @project, :url => update_project_setting_path, :class =>"span12", :method => "post" do|f|
    %h4 Static Data
    = f.label :name, "Project Name:"
    = f.text_field :name, :value => @project.name, :class => "input-block-level"
    = f.error :name
    %p
    = f.label :season, 'Project SRID:'
    = f.select :srid, @spatial_list, :selected => @project_setting['srid'], :class => "input-block-level"
    %p
    = f.label :season, "Project Season:"
    = f.text_field :season, :value => @project_setting['season'], :class => "input-block-level"
    %p
    = f.label :description, "Project Description:"
    = f.text_area :description, :size => "40x5", :class => 'project-textarea input-block-level', :value => @project_setting['description']
    %p
    = f.label :permit_no, "Permit No:"
    = f.text_field :permit_no, :value => @project_setting['permit_no'], :class => "input-block-level"
    %p
    = f.label :permit_holder, "Permit Holder:"
    = f.text_area :permit_holder, :size => "40x5", :class => 'project-textarea input-block-level', :value => @project_setting['permit_holder']
    %p
    = f.label :contact_address, "Contact and Address:"
    = f.text_area :contact_address, :size => "40x5", :class => 'project-textarea input-block-level', :value => @project_setting['contact_address']
    %p
    = f.label :participant, "Participants:"
    = f.text_area :participant, :size => "40x5", :class => 'project-textarea input-block-level', :value => @project_setting['participant']
    .form-actions
      = link_to "<i class='icon-arrow-left'></i> Back".html_safe, project_path(@project), :class => 'btn'
      = f.submit "Update", :class => "btn btn-inverse", :id => "update-project-setting-btn"
