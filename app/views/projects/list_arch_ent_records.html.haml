%h1= @project.name
.content
  - if (!@uuid.empty?)
    - prev_uuid = @uuid[0][0]
    - uuid_array = []
    - array = []
    - for uuid in @uuid
      - if prev_uuid != uuid[0]
        - uuid_array << array
        - array = []
        - prev_uuid = uuid[0]
      - array << uuid
    - uuid_array << array
    - for uuid_group in uuid_array
      %ul.inner
        - for uuids in uuid_group
          %li
            %a{:href => edit_arch_ent_records_path(@project,uuids[0])}
              =uuids[3].to_s + ": " + uuids[4].to_s
  -else
    No Record Found
-if !@uuid.empty?
  - if (session[:prev_offset] >= 0)
    = link_to "Previous", list_arch_ent_records_path(@project,session[:prev_offset]), :class => 'btn'
  = link_to "Next", list_arch_ent_records_path(@project,session[:next_offset]), :class => 'btn'
  = link_to "Back", project_path(@project), :class => 'btn'
