.container
  %h1
    %span Projects
  .well
    = link_to "Create Project", new_project_path, :class => "btn"
    = link_to "Upload Project", upload_project_path, :class => "btn"
.clear
- if @projects
  %table.table
    %tr
      %th No.
      %th Name
      %th Created
    - index = 0
    - for project in @projects
      - index = index + 1
      %tr
        %td
          = index.to_s + "."
        %td
          %a.project{href:project_path(project)}
            = project.name
        %td
          = project.created_at.localtime.strftime("%d/%m/%Y %I:%M%p")
