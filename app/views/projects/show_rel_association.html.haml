- title @project.name + " - Archaeological Entity Relationship Associations"
= breadcrumbs
.content
  - if !@relationships.nil? and !@relationships.empty?
    .records
      - for relationships in @relationships
        %ul.inner
          %input{:type => 'button',:id => 'remove-member', :class => 'remove-member ui-icon ui-icon-circle-minus', :src=> remove_arch_ent_member_path(@project)+'?relationshipid='+relationships[0].to_s+'&uuid='+session[:uuid].to_s}
          %li
            %a{:href => edit_rel_records_path(@project,relationships[0])}
              =relationships[1].to_s
    %input{:type => 'button',:id => 'search-member', :value=> 'Add Member', :class => 'add-member btn', :src=> search_rel_association_path(@project,session[:uuid])}
    .form-actions
      = link_to "<i class='icon-arrow-left'></i> Back".html_safe, edit_arch_ent_records_path(@project,session[:uuid]), :class => 'btn'
  -else
    %p No Members Found
    %input{:type => 'button',:id => 'search-member', :value=> 'Add Member', :class => 'add-member btn', :src=> search_rel_association_path(@project,session[:uuid])}
    .form-actions
      = link_to "<i class='icon-arrow-left'></i> Back".html_safe, edit_arch_ent_records_path(@project,session[:uuid]), :class => 'btn'
-if !@uuid.nil? and !@uuid.empty?
  .footer.search
    - if (session[:prev_offset] >= 0)
      %form{:action => show_rel_members_path, :method => "get"}
        %input{:type => 'hidden', :value => session[:authenticity_token], :name => 'authenticity_token'}
        %input{:type => 'hidden', :value => session[:prev_offset], :name => 'offset'}
        %input{:type => 'submit', :value => "Previous", :class => 'btn'}
    %form{:action => show_rel_members_path, :method => "get"}
      %input{:type => 'hidden', :value => session[:authenticity_token], :name => 'authenticity_token'}
      %input{:type => 'hidden', :value => session[:next_offset], :name => 'offset'}
      %input{:type => 'submit', :value => "Next", :class => 'btn'}
