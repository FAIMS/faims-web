- title @project.name + " - Search"
.content
  %h2 Search Relationship
  %form{:action => show_rel_records_path, :method => "get"}
    %p An empty search will list all relationships
    .input-append
      %input{:type => 'hidden', :value => session[:authenticity_token], :name => 'authenticity_token'}
      %input{:type => 'hidden', :value => 0, :name => 'offset'}
      %input{:type => 'text', :name => 'query'}
      %input{:type => 'submit', :value => "Search", :class => 'btn'}
.form-actions
  = link_to "<i class='icon-arrow-left'></i> Back".html_safe, project_path(@project), :class => 'btn'
