- title "Background Jobs"
= breadcrumbs
.clear
- if @jobs
  %table.table#jobs
    %tr
      %th.span1 No.
      %th.span2 Module / File name
      %th.span2 Job type
      %th.span2 User
      %th.span2 Status
      %th.span2
      %th.span2 Last Updated
      - for job in @jobs
        %tr
          %td.span1
            = job.id
          %td.span2
            = job.module_name
          %td.span2
            = job.job_type
          %td.span2
            = (job.user.first_name + " " + job.user.last_name) unless job.user == nil
          %td.span2
            = job.status
          %td.span2
            FIXME: Link/action
          %td.span2
            = job.updated_at.localtime.strftime("%d/%m/%Y %I:%M%p")
